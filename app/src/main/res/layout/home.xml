<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity"  android:background="@drawable/gradient__3_">
    <!--  Logo and Title (from the previous example)  -->
    <ImageView
        android:id="@+id/logo1"
        android:layout_width="241dp"
        android:layout_height="225dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/bird_logo" />
    <TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Get started by clicking on \nany of the buttons below \nthat you would like to tour!" android:textStyle="italic" android:textSize="24sp" android:layout_below="@+id/logo1" android:layout_centerHorizontal="true" android:layout_marginTop="20dp"/>
    <!--  Buttons  -->
    <Button android:id="@+id/buttonLocation1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Location" android:textStyle="bold" android:layout_below="@+id/title" android:layout_centerHorizontal="true" android:layout_marginTop="20dp" android:backgroundTint="#99AF17"/>
    <Button android:id="@+id/buttonCreateSightings1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Create Sighting" android:textStyle="bold" android:layout_below="@+id/buttonLocation1" android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:backgroundTint="#99AF17"/>
    <Button android:id="@+id/buttonViewSightings1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View Sightings" android:textStyle="bold" android:layout_below="@+id/buttonCreateSightings1" android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:backgroundTint="#99AF17"/>
    <Button android:id="@+id/buttonRarest1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="     Rarest    " android:textStyle="bold" android:layout_below="@+id/buttonViewSightings1" android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:backgroundTint="#99AF17"/>
    <Button android:id="@+id/buttonSettings1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Settings" android:textStyle="bold" android:layout_below="@+id/buttonRarest1" android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:backgroundTint="#99AF17"/>
    <Button android:id="@+id/buttonLogout1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Logout" android:textStyle="bold" android:layout_below="@+id/buttonSettings1" android:layout_centerHorizontal="true" android:layout_marginTop="10dp" android:backgroundTint="#99AF17"/>
    <!--  Add more UI elements as needed  -->
</RelativeLayout>