<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient__3_">

   <TextView
       android:id="@+id/titleTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="70dp"
       android:text="Record your Sightings"
       android:textSize="36sp"
       android:textColor="#99AF17"
       android:textStyle="bold"/>

   <ImageButton
       android:id="@+id/imageButton1"
       android:layout_width="50dp"
       android:layout_height="45dp"
       android:layout_marginTop="10dp"
       android:layout_marginStart="350dp"
       android:background="#00FFFFFF"
       android:backgroundTint="#99AF17"
       android:scaleType="fitStart"
       app:srcCompat="@drawable/house1"
       />

   <TextView
       android:id="@+id/Species"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_marginStart="28dp"
       android:layout_marginTop="125dp"
       android:text="Species:"
       android:textColor="@color/black"
       android:textSize="18sp" />

   <EditText
       android:id="@+id/speciesedittext"
       style="@android:style/Widget.Holo.EditText"
       android:layout_width="333dp"
       android:layout_height="44dp"
       android:layout_alignParentStart="true"
       android:layout_marginStart="28dp"
       android:layout_marginTop="150dp"
       android:backgroundTintMode="screen"
       android:hint=" Enter the bird species"
       android:background="@drawable/edit_background"
       android:labelFor="@id/usernameLabel"
       android:outlineProvider="bounds"
       android:overScrollMode="never"
       android:singleLine="false" />

   <TextView
       android:id="@+id/Location"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_marginStart="28dp"
       android:layout_marginTop="200dp"
       android:text="Location of Sighting:"
       android:textColor="@color/black"
       android:textSize="18sp" />
   <!--search view to search our location-->
   <androidx.appcompat.widget.SearchView
       android:id="@+id/idSearchView"
       android:layout_width="333dp"
       android:layout_height="44dp"
       android:layout_marginStart="28dp"
       android:layout_marginTop="230dp"
       android:layout_marginBottom="10dp"
       android:elevation="5dp"
       android:background="@drawable/edit_background"
       app:iconifiedByDefault="false"
       app:queryHint="Search Here" />
   <TextView
       android:id="@+id/date"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_marginStart="28dp"
       android:layout_marginTop="280dp"
       android:text="Date of Sighting:"
       android:textColor="@color/black"
       android:textSize="18sp" />
   <DatePicker
       android:id="@+id/smallDatePicker"
       android:layout_width="277dp"
       android:layout_height="175dp"
       android:layout_gravity="center"
       android:layout_marginStart="50dp"
       android:layout_marginTop="275dp"
       android:background="@android:color/transparent"
       android:calendarViewShown="false"
       android:datePickerMode="spinner"
       android:scaleX="0.7"
       android:scaleY="0.7"
       android:spinnersShown="true" />
   <TextView
       android:id="@+id/description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentStart="true"
       android:layout_marginStart="28dp"
       android:layout_marginTop="420dp"
       android:text="Description:"
       android:textColor="@color/black"
       android:textSize="18sp" />
   <EditText
       android:id="@+id/descriptionEditText"
       android:layout_width="333dp"
       android:layout_height="96dp"
       android:textColor="#000000"
       android:minLines="4"
       android:layout_marginStart="28dp"
       android:layout_marginTop="450dp"
       android:hint="  Describe the bird"
       android:background="@drawable/edit_background"/>
   <Button
       android:id="@+id/iploadImageButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Attach Image"
       android:drawableLeft="@drawable/paperclip"
       android:drawablePadding="8dp"
       android:backgroundTint="#99AF17"
       android:layout_marginStart="110dp"
       android:layout_marginTop="570dp"
       android:textColor="#FFFFFF"
       android:textSize="16sp"
       android:paddingStart="16dp"
       android:paddingEnd="16dp" />

   <Button
       android:id="@+id/loginButton"
       android:layout_width="213dp"
       android:layout_height="79dp"
       android:textSize="20sp"
       android:layout_alignParentStart="true"
       android:layout_marginStart="100dp"
       android:layout_marginTop="650dp"
       android:backgroundTint="#99AF17"
       android:text="Log Sighting" />



</RelativeLayout>